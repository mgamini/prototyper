*, *:before, *:after
  box-sizing border-box

body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color #00B7FF

.group
  float left
  width 100%

#log
  float left
  color #ccc

  >li:first-child
    color #000

slides
  display block
  position relative
  float left

  slide
    position absolute
    display block

slide
  background white
  background-position center center
  background-repeat no-repeat
  background-size cover

  div
    position absolute
    display block
    height 100px
    width 100px

    &.test 
      background rgba(255,0,0,0.3)

.full-slide 
  width 100%
  height 100%
  display block

.click, [ng-click]
  cursor pointer  

.ipad.landscape
  background url('../img/ipad-landscape.png') top center no-repeat
  height 758px
  width 980px

  slide
    height 583px
    width 775px
    top 44px
    left 106px
    border-radius 3px    


@import slides
@import json-explorer